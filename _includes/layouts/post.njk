---
layout: layouts/base.njk
---

<div class="container-sm">
  <h1>{{ title }}</h1>
  {{ content | safe }}

  <br><hr>
  {% if not hideTagsList %}
    <b>Tags: </b>
    {% for tag in tags %}
      {% if tag != 'post' %}
        <a href="{{ '/tags/' | url }}{{ tag | slug }}">{{ tag }}</a>
        {%- if not loop.last %}, {% endif %}
      {% endif %}
    {% endfor %}
  {% endif %}
  <br><br>
  <a href="{{ '/' | url }}">&larr; Back home</a>
</div>

<script
  async
  src="https://utteranc.es/client.js"
  repo="valarnet/valarnet-blog"
  issue-term="title"
  theme="github-light"
  crossorigin="anonymous"
></script>